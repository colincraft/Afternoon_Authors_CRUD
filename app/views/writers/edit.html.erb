<h2>Edit this puppy!</h2>
<% if @writer.errors.any?%>
  <% @writer.errors.full_messages.each do |error|%>
    <p class="text-danger">
      <%= error %>
    </p>
  <% end%>
<% end %>

<%= form_for @writer do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
</p>
<%= link_to "Delete this writer?", author_path, method:"Delete", data:{ confirm: "Are you sure you want to delete #{@writer.name}?"} %>
<p>
<%= link_to "Back to Home", writers_path%>
</p>
<% end %>